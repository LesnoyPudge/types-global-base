{
    "include": [
        "test.ts",
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "compilerOptions": {
        "types": ["./src/index.d.ts"],
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleDetection": "auto",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": false,
        "baseUrl": ".",
        "declarationDir": "build",
    }
}
